# Modified from ChatGPT response asking how to have multi stage dockerfile for dotnet web app

# Build stage
FROM mcr.microsoft.com/dotnet/sdk:9.0 AS build

WORKDIR /app

COPY *.sln .
COPY OurCity.Api/*.csproj ./OurCity.Api/
COPY OurCity.Api.Test/*.csproj ./OurCity.Api.Test/
COPY OurCity.MigrationsRunner/*.csproj ./OurCity.MigrationsRunner/
RUN dotnet restore

COPY . .

WORKDIR /app/OurCity.Api

RUN dotnet build -c Release --no-restore

WORKDIR /app/OurCity.Api.Test

RUN dotnet build -c Release --no-restore

# Publish stage
FROM build AS publish

WORKDIR /app/OurCity.Api

RUN dotnet publish -c Release -o /app/publish /p:UseAppHost=false

# Runtime
FROM mcr.microsoft.com/dotnet/aspnet:9.0 AS runtime

WORKDIR /app

COPY --from=publish /app/publish .

#non-root user
USER app

EXPOSE 9000
ENTRYPOINT ["dotnet", "OurCity.Api.dll", "--urls", "http://0.0.0.0:9000"]
